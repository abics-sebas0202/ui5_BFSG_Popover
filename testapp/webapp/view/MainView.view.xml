<mvc:View
	controllerName="testapp.controller.MainView"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	>

	<Page
		title="{i18n>appTitle}"
		id="idPage">
		<content>
			<IllustratedMessage
				title="{i18n>appTitle}"
				illustrationType="sapIllus-SuccessHighFive"
				enableVerticalResponsiveness="true"
				description="{i18n>appDescription}">
				<additionalContent>
					<Button
						id="helloButton"
						text="{'i18n>btnText'}"
						press="sayHello" />
				</additionalContent>
			</IllustratedMessage>
		</content>
	</Page>

</mvc:View>
