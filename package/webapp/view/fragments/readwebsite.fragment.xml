<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <ResponsivePopover
        id="idScreenReaderResponsivePopover"
        title="Screenreader Settings"
        class="sapUiResponsiveContentPadding"
		placement="Left"
        >
        
        <content>
            <VBox>
					<VBox class="sapUiSmallMargin">
						<Text text="Read With Pointer" />
						<Switch change="onSwitchPointerReadChange">
							<layoutData>
								<FlexItemData growFactor="1" />
							</layoutData>
						</Switch>
						
					</VBox>
                <!-- Icon Buttons Section -->
                <HBox
                    justifyContent="SpaceAround"
                    alignItems="Center"
                    class="sapUiSmallMargin ">
                    <core:Icon
                        src="sap-icon://media-rewind"
                        size="2em"
                        color="#031E48"
						press="onIconBackReadPress" />
                    <core:Icon
                        src="sap-icon://media-play"
                        size="2em"
                        color="#031E48"
						press="onIconStartReadPress" />
						 
                    <core:Icon
                        src="sap-icon://stop"
                        size="2em"
                        color="#031E48"
						press="onIconStopReadPress" />
						 
                    <core:Icon
                        src="sap-icon://media-forward"
                        size="2em"
                        color="#031E48"
					 />
					
                </HBox>
                
                <!-- Speed and Volume Controls -->
                <HBox justifyContent="SpaceAround" alignItems="Center" class="sapUiSmallMargin sapUiLargeMarginTop">
                    <VBox>
                        <Text text="Geschwindigkeit" class="sapUiTinyMarginBottom sapUiTinyMarginTop" textAlign="Center" />
                        <HBox justifyContent="Center" alignItems="Center">
                            <Button text="-" press=".onButtonDecreaseSpeedPress" />
                            <Text text="{readWebsiteModel>/speed}x" textAlign="Center" class="sapUiSmallMarginHorizontal" />
                            <Button text="+" press=".onButtonIncreaseSpeedPress" />
                        </HBox>
                    </VBox>
                    
                    <Text text="|" class="sapUiSmallMarginHorizontal" />
                    
                    <VBox>
                        <Text text="LautstÃ¤rke" class="sapUiTinyMarginBottom sapUiTinyMarginTop" textAlign="Center" />
                        <HBox justifyContent="Center" alignItems="Center">
                            <Button text="-" press=".onButtonDecreaseVolumePress" />
                            <Text text="{readWebsiteModel>/volume}%" textAlign="Center" class="sapUiSmallMarginHorizontal" />
                            <Button text="+" press=".onButtonIncreaseVolumePress" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>


	
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>
