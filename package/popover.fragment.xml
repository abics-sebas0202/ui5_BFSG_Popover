<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <ResponsivePopover showHeader="false" placement="Left" class="accessibilityResponsivePopover">
        <FlexBox direction="Column" class="optionsContainer">

            <!-- Font Size Begin -->

            <Panel expandable="true" class="expandPanel">
                <headerToolbar>
                    <OverflowToolbar>
                        <Button text="Font Size" icon="sap-icon://text" class="expandBtn" />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                     <core:Fragment fragmentName="ui5_bfsg_popover.fragments.fontsize" type="XML" />
                </content>
            </Panel>

            <!-- Font Size End -->

            <!-- Contrast Mode Begin -->

            <Panel expandable="true" class="expandPanel">
                <headerToolbar>
                    <OverflowToolbar>
                        <Button text="Contrast Mode" icon="sap-icon://light-mode" class="expandBtn" press="onContrastModeButtonPress" />
                        <ToolbarSpacer />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <core:Fragment fragmentName="ui5_bfsg_popover.fragments.contrastmode" type="XML" />

                </content>
            </Panel>
           

            <!-- Contrast Mode End -->

            <!-- Activate BLue Filter Begin -->

            <Panel expandable="true" class="expandPanel">
                <headerToolbar>
                    <OverflowToolbar>
                        <Button text="Activate Blue Filter" icon="sap-icon://lightbulb" press="onButtonBlueFilterPress" class="expandBtn" />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <VBox class="blueFilterContainer">
                        <Text text="Intensity" class="intensityLabel" />
                        <Slider value="{configModel>/blueFilter/blueFilterIntensity}" liveChange="onBlueFilterIntensitySliderLiveChange" class="blueFilterSlider" />
                        <Text text="{= ${configModel>/blueFilter/blueFilterIntensity} + '%'}" class="intensityValue" />
                    </VBox>
                </content>
            </Panel>

            <!-- Activate BLue Filter End -->

        

            <!-- Read Website Begin -->

            <Panel expandable="true"  class="expandPanel">
                <headerToolbar>
                    <OverflowToolbar>
                        <Button text="Read Website" icon="sap-icon://sound-loud"  class="expandBtn" />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <core:Fragment fragmentName="ui5_bfsg_popover.fragments.readwebsite" type="XML" />
                </content>
            </Panel>


            <!-- Read Website End -->

            <!-- Night Mode Begin -->

            <Panel>
                <Button text="Night Mode" icon="sap-icon://bed" class="accessPopoverContentBtn" press="onNightModeButtonPress" />

            </Panel>

            <!-- Night Mode End -->

            <!-- Tab Navigation Begin -->

            <Panel>
                <Button icon="sap-icon://keyboard-and-mouse" text="Tab Navigation" class="accessPopoverContentBtn" press="onTabNavigationButtonPress"/>

            </Panel>

            <!-- Tab Navigation End -->

            <!-- Color Blindness Begin  -->

            <Panel>
                <Button icon="sap-icon://palette" text="Color Blindness" class="accessPopoverContentBtn" press="onColorBlindnessButtonPress"/>

            </Panel>

            <!-- Color Blindness End  -->

            <!-- Hide Images Begin -->

            <Panel>
                <Button icon="sap-icon://hide" text="Hide Images" class="accessPopoverContentBtn" press="onHideImagesButtonPress"/>

            </Panel>

            <!-- Hide Images End -->

            <!-- More Features Begin -->

            <Panel>
                <Button icon="sap-icon://add" text="More Features" class="accessPopoverContentBtn" press="onMoreFeaturesButtonPress"/>

            </Panel>

            <!-- More Features End -->

            <!-- Reset All Begin -->

            <Panel>
                <Button icon="sap-icon://refresh" text="Reset All" class="accessPopoverContentBtn"/>
            </Panel>

            <!-- Reset All End -->

        </FlexBox>
        <endButton>
            <Button text="Close" press="onClose" />
        </endButton>
    </ResponsivePopover>
</core:FragmentDefinition>