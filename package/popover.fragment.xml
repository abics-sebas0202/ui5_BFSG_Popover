<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <ResponsivePopover title="Accessibility Options">
        <VBox>
        <!-- ugur -->
            <Panel expandable="true">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Adjust Font Size of Text" />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <StepInput min="10" value="{configModel>/fontSize}" description="px" step="10"/>
                </content>
            </Panel>
            <Panel expandable="false">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Contrast Mode"/>
                        <ToolbarSpacer />
                        <Switch state="{configModel>/contrastMode}"/>
                    </OverflowToolbar>
                </headerToolbar>
            </Panel>
            <Panel expandable="true">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Blue Light Fitler" />
                    </OverflowToolbar>
                </headerToolbar>
                <content>
                    <Slider min="0" max="100" value="{configModel>/blueLight}"/>
                </content>
            </Panel>
        </VBox>
        <endButton>
            <Button text="Close" press="closePopover" />
        </endButton>
    </ResponsivePopover>
</core:FragmentDefinition>